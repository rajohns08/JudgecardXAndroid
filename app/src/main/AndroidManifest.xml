<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rajohns.judgecardx" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".CustomApplication"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name" >

        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/signin"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.ForgotLoginActivity"
            android:label="@string/forgot_login"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Activities.SignUpActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Activities.FightListsContainerActivity"
            android:label="@string/judgecardx"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Activities.ScorecardActivity"
            android:label="Scorecard"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Activities.AverageScorecardActivity"
            android:label="Average Scorecard"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Activities.CreateOrRequestActivity"
            android:label="Request Scorecard"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
